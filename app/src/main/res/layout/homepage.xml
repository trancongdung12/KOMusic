    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rycPlaylist"
        android:layout_width="417dp"
        android:layout_height="151dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/view2"
